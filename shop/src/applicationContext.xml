<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop.xsd
	http://www.springframework.org/schema/tx 
	http://www.springframework.org/schema/tx/spring-tx.xsd">
	
	<!-- 配置连接池: -->
	<!-- 引入外部属性文件 -->
	<context:property-placeholder location="classpath:jdbc.properties"/>
	<!-- 配置C3P0连接池: -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${jdbc.driver}"/>
		<property name="jdbcUrl" value="${jdbc.url}"/>
		<property name="user" value="${jdbc.user}"/>
		<property name="password" value="${jdbc.password}"/>
	</bean>
	
	<!-- Hibernate的相关信息 -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<!-- 注入连接池 -->
		<property name="dataSource" ref="dataSource"/>
		<!-- 配置Hibernate的其他的属性 -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.connection.autocommit">false</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<!-- 配置Hibernate的映射文件 -->
		<property name="mappingResources">
			<list>
				<value>com/mason/shop/user/vo/User.hbm.xml</value>				 
				<value>com/mason/shop/category/vo/Category.hbm.xml</value>				 
				<value>com/mason/shop/product/vo/Product.hbm.xml</value>
				<value>com/mason/shop/categorysecond/vo/CategorySecond.hbm.xml</value>				
				<value>com/mason/shop/order/vo/Order.hbm.xml</value>
				<value>com/mason/shop/order/vo/OrderItem.hbm.xml</value>
				<!--
				<value>com/mason/shop/adminuser/vo/AdminUser.hbm.xml</value>
				-->
			</list>
		</property>

	</bean>
	
	<!-- 事务管理: -->
	<!-- 事务管理器 -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<!-- 开启注解事务 -->
	<tx:annotation-driven transaction-manager="transactionManager"/>
	
	<!-- Action的配置 ===========================-->
	
	<!-- 首页访问的Action -->
	<bean id="indexAction" class="com.mason.shop.index.action.IndexAction" scope="prototype">
		<property name="categoryService" ref="categoryService"></property>
		<property name="productService" ref="productService"></property>
	</bean>
	
	<!-- 用户模块的Action -->
	<bean id="userAction" class="com.mason.shop.user.action.UserAction" scope="prototype">
		<property name="userService" ref="userService"></property>
	</bean>
	
	<!-- 配置验证码的Action -->
	<bean id="checkImgAction" class="com.mason.shop.user.action.CheckImgAction" scope="prototype">
		
	</bean>
	
	<!-- 配置商品模块的Action -->
	<bean id="productAction" class="com.mason.shop.product.action.ProductAction" scope="prototype">
		<property name="productService" ref="productService"></property>	
		<property name="categoryService" ref="categoryService"></property>
	</bean>
	
	<!-- 配置购物车模块的Action -->
	<bean id="cartAction" class="com.mason.shop.cart.action.CartAction" scope="prototype">
		<property name="productService" ref="productService"></property>
	</bean>
	
	<!-- 订单模块的Action -->
	<bean id="orderAction" class="com.mason.shop.order.action.OrderAction" scope="prototype">
		<property name="orderService" ref="orderService"></property>
	</bean>
	
	
	
	<!-- Service的配置  ===========================-->
	<bean id="userService" class="com.mason.shop.user.service.UserService">
		<property name="userDao" ref="userDao"></property>
	</bean>
	
	<bean id="categoryService" class="com.mason.shop.category.service.CategoryService">
		<property name="categoryDao" ref="categoryDao"></property>
	</bean>
	
	<bean id="productService" class="com.mason.shop.product.service.ProductService">
		<property name="productDao" ref="productDao"></property>
	</bean>
	
	<bean id="orderService" class="com.mason.shop.order.service.OrderService">
		<property name="orderDao" ref="orderDao"></property>
	</bean>
	
		
		
	<!-- Dao的配置  ===========================-->
	<bean id="userDao" class="com.mason.shop.user.dao.UserDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>

	<bean id="categoryDao" class="com.mason.shop.category.dao.CategoryDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="productDao" class="com.mason.shop.product.dao.ProductDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
	<bean id="orderDao" class="com.mason.shop.order.dao.OrderDao">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
</beans>
